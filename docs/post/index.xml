&lt;/span&gt;&lt;/span&gt;&lt;span style=&#34;display:flex;&#34;&gt;&lt;span&gt;    &lt;span style=&#34;color:#66d9ef&#34;&gt;if&lt;/span&gt; action.edit &lt;span style=&#34;color:#66d9ef&#34;&gt;then&lt;/span&gt;
